packages:
  yum:
    gcc: []
    gcc-c++: []
    make: []
    python3-devel: []
    python3-pip: []

commands:
  01_upgrade_pip:
    command: "python3 -m pip install --upgrade pip setuptools wheel"

  02_install_dependencies:
    command: "python3 -m pip install -r /var/app/current/requirements.txt --no-cache-dir"

option_settings:
  "aws:elasticbeanstalk:container:python":
    WSGIPath: application:application
